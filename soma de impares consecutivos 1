import java.util.*;
import java.lang.*;
import java.io.*;

class Main {
    public static void main(String[] args) {

    Scanner leia = new Scanner(System.in);
        
    int inicio, fim, soma=0;   
        
    inicio = leia.nextInt();
    fim = leia.nextInt();

    if(inicio> fim){
       int temp = inicio;
       inicio = fim; 
        fim = temp;
    }
     for( int i = inicio+1; i <fim;i++){
     if (i%2!=0){
         soma +=i;
      } 
         
     }   
     System.out.println(soma);   
        
    }
}
